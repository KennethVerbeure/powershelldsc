{
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.0.1-preview",
    "parameters": {
        "basics": [],
        "steps": [
            {
                "name": "awinguEnvConfig",
                "label": "Awingu configuration",
                "subLabel": {
                    "preValidation": "Configure the Awingu environment",
                    "postValidation": "Done"
                },
                "bladeTitle": "Awingu Configuration",
                "elements": [
                    {
                        "name": "adminUsername",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Admin username",
                        "toolTip": "Admin username for the virtual machines.",
                        "constraints": {
                            "required": true
                        }
                    },
                    {
                        "name": "adminPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "Admin Password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": {
                            "password": "Admin password for the virtual machines."
                        },
                        "constraints": {
                            "required": true
                        }
                    },
                    {
                        "name": "awinguAdminPassword",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "Awingu admin Password",
                            "confirmPassword": "Confirm password"
                        },
                        "toolTip": {
                            "password": "Admin password for Awingu admin"
                        },
                        "constraints": {
                            "required": true
                        }
                    },
                    {
                        "name": "emailAddress",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Email Address",
                        "toolTip": "Email Address",
                        "constraints": {
                            "required": true
                        }
                    },
                    {
                        "name": "domainName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Domain name",
                        "toolTip": "Active directory domain",
                        "constraints": {
                            "required": true
                        }
                    },
                    {
                        "name": "publicIpAddressDnsPrefix",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Dns prefix",
                        "toolTip": "dns prefix for the awingu environment ({prefix}.{location}.cloudapp.azure.com).",
                        "constraints": {
                            "required": true
                        }
                    },
                    {
                        "name": "appServerCount",
                        "type": "Microsoft.Common.DropDown",
                        "label": "App Server Count",
                        "defaultValue": "1",
                        "toolTip": "Specify the number of app servers in this deployment.",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "1",
                                    "value": 1
                                },
                                {
                                    "label": "2",
                                    "value": 2
                                },
                                {
                                    "label": "3",
                                    "value": 3
                                },
                                {
                                    "label": "4",
                                    "value": 4
                                },
                                {
                                    "label": "5",
                                    "value": 5
                                },
                                {
                                    "label": "6",
                                    "value": 6
                                },
                                {
                                    "label": "7",
                                    "value": 7
                                },
                                {
                                    "label": "8",
                                    "value": 8
                                },
                                {
                                    "label": "9",
                                    "value": 9
                                },
                                {
                                    "label": "10",
                                    "value": 10
                                },
                                {
                                    "label": "11",
                                    "value": 11
                                },
                                {
                                    "label": "12",
                                    "value": 12
                                },
                                {
                                    "label": "13",
                                    "value": 13
                                },
                                {
                                    "label": "14",
                                    "value": 14
                                },
                                {
                                    "label": "15",
                                    "value": 15
                                },
                                {
                                    "label": "16",
                                    "value": 16
                                },
                                {
                                    "label": "17",
                                    "value": 17
                                },
                                {
                                    "label": "18",
                                    "value": 18
                                },
                                {
                                    "label": "19",
                                    "value": 19
                                },
                                {
                                    "label": "20",
                                    "value": 20
                                }
                            ]
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "appServerCount": "[steps('awinguEnvConfig').appServerCount]",
            "adminUsername": "[steps('awinguEnvConfig').adminUsername]",
            "adminPassword": "[steps('awinguEnvConfig').adminPassword]",
            "domainName": "[steps('awinguEnvConfig').domainName]",
            "awinguAdminPassword": "[steps('awinguEnvConfig').awinguAdminPassword]",
            "emailAddress": "[steps('awinguEnvConfig').emailAddress]",
            "publicIpAddressDnsPrefix": "[steps('awinguEnvConfig').publicIpAddressDnsPrefix]"
        }
    }
}