{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminPassword": {
            "type": "String"
        },
        "adminUsername": {
            "type": "String"
        },
        "adVmName": {
            "type": "String"
        },
        "apiVersion": {
            "type": "String"
        },
        "baseResourcesUri": {
            "type": "String"
        },
        "domainName": {
            "type": "String"
        },
        "location": {
            "type": "String"
        },
        "subnetRef": {
            "type": "String"
        },
        "securityGroup": {
            "type": "String"
        },
        "vmDiskBaseUri": {
            "type": "String"
        },
        "winVM": {
            "type": "object"
        }
    },
    "variables": {
        "adNicPrefix": "[parameters('adVmName')]",
        "adModulesURL": "[concat(parameters('baseResourcesUri'), 'CreateADDNS.ps1.zip')]",
        "adConfigurationFunction": "CreateADDNS.ps1\\CreateADDNS"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('adNicPrefix')]",
            "apiVersion": "[parameters('apiVersion')]",
            "location": "[parameters('location')]",
            "tags": {
                "displayName": "AD_NetworkInterface"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[parameters('subnetRef')]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[parameters('securityGroup')]"
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('adVmName')]",
            "apiVersion": "[parameters('apiVersion')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('adNicPrefix'))]"
            ],
            "tags": {
                "displayName": "AD_vm_resource"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('winVM').vmSize]"
                },
                "osProfile": {
                    "computerName": "[parameters('adVmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('winVM').imagePublisher]",
                        "offer": "[parameters('winVM').imageOffer]",
                        "sku": "[parameters('winVM').imageSKU]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "osdisk",
                        "vhd": {
                            "uri": "[concat(parameters('vmDiskBaseUri'), parameters('adVmName'),'-osdisk.vhd')]"
                        },
                        "caching": "None",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "properties": {
                                "primary": "true"
                            },
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('adNicPrefix'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "Microsoft.Compute/virtualMachines/extensions",
                    "name": "[concat(parameters('adVmName'),'/CreateADForest')]",
                    "apiVersion": "[parameters('apiVersion')]",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', parameters('adVmName'))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Powershell",
                        "type": "DSC",
                        "typeHandlerVersion": "2.14",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "ModulesUrl": "[variables('adModulesURL')]",
                            "ConfigurationFunction": "[variables('adConfigurationFunction')]",
                            "Properties": {
                                "DomainName": "[parameters('domainName')]",
                                "AdminCreds": {
                                    "UserName": "[parameters('adminUsername')]",
                                    "Password": "PrivateSettingsRef:AdminPassword"
                                }
                            }
                        },
                        "protectedSettings": {
                            "Items": {
                                "AdminPassword": "[parameters('adminPassword')]"
                            }
                        }
                    }
                }
            ]
        }
    ]
}